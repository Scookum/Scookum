extends layout.pug

block datablock
  - var appName = "login";
  - var header = "";
  - var title = "";

block append scripts
  script(src="js/loginController.js")

block contents
  div.row(ng-controller="loginController")
    div.col-xs-8.col-md-6.col-sm-4.col-sm-offset-4
      form
        div.form-group
          label(for="userName")
            | ユーザ名
          input.form-control#userName(type="text", ng-model="userName")
        div.form-group
          label(for="password")
            | パスワード
          input.form-control#password(type="password", ng-model="password")
        button.btn.btn-default(type="button", ng-click="submit()") Login
