doctype html
html(ng-app="login")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Please login
    link(href="css/bootstrap.min.css" rel="stylesheet")
    link(href="css/style.css", rel="stylesheet")
    script(src="js/jquery-3.1.1.min.js")
    script(src="js/bootstrap.min.js")
  body(ng-controller="loginCtrl")
    header.text-center
      div.container
        div.row
          div.col-md-6 Scookum Admin
    div.container-fluid
      div.row
        div.col-xs-8.col-md-6.col-sm-4.col-sm-offset-4
          form
            div.form-group
              label(for="userName")
                | ユーザ名
              input.form-control#userName(type="text", ng-model="userName")
            div.form-group
              label(for="password")
                | パスワード
              input.form-control#password(type="password", ng-model="password")
            button.btn.btn-default(type="button", ng-click="submit()") Login
    script(src="js/angular.min.js")
    script(src="js/login.js")
